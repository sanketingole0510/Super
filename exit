-- Create a new Oracle schema
CREATE USER your_username IDENTIFIED BY your_password;

-- Grant necessary privileges to the user
GRANT CONNECT, RESOURCE TO your_username;

-- Connect to the newly created user
CONNECT your_username/your_password;

-- Create a table named 'employees'
CREATE TABLE employees (
    employee_id NUMBER PRIMARY KEY,
    first_name VARCHAR2(50),
    last_name VARCHAR2(50),
    hire_date DATE,
    salary NUMBER
);

-- Insert some sample data
INSERT INTO employees VALUES (1, 'John', 'Doe', TO_DATE('2023-11-01', 'YYYY-MM-DD'), 50000);
INSERT INTO employees VALUES (2, 'Alice', 'Smith', TO_DATE('2023-11-01', 'YYYY-MM-DD'), 60000);
INSERT INTO employees VALUES (3, 'Bob', 'Johnson', TO_DATE('2023-11-01', 'YYYY-MM-DD'), 55000);

-- Commit the changes
COMMIT;

